- content_for :title do
  Coursemy
  \|
  Edit
  = @course.title
= link_to 'Courses', courses_path
\/
= link_to @course.title, course_path(@course)
\|
= link_to course_course_wizard_path(@course, :details) do
  Edit
  = step.to_s.humanize

.card 
  .progress
    .progress-bar{style: "width: #{@progress}%"}
  .card-header
    %h5
      = wizard_steps.index(step) + 1
      \/
      = wizard_steps.count
      = step.to_s.humanize
      
  .card-body
    = simple_form_for @course, url: course_course_wizard_path, method: :put do |f|
      = f.input :title
      = f.input :description, as: :rich_text_area
      = f.input :level, collection: Course.levels, include_blank: true
      = f.input :price
      = f.input :published
      %p
      = f.label :tags
      = f.select :tag_ids, @tags.all.pluck(:name, :id), {}, { multiple: true, class: "selectize-tags" }
      %p
      = f.button :submit
  .card-footer
    .float-start
      = link_to previous_wizard_path, class: "btn btn-sm btn-info" do
        .fa.fa-arrow-left
        Back
  
    .float-end
      = link_to next_wizard_path, class: "btn btn-sm btn-info" do
        .fa.fa-arrow-right
        Continue
