.card 
  .progress
    .progress-bar{style: "width: #{@progress}%"}
  .card-header
    %h5
      = wizard_steps.index(step) + 1
      \/
      = wizard_steps.count
      = step.to_s.humanize
      
  .card-body
    = simple_form_for @course, url: course_course_wizard_path, method: :put do |f|
      = f.input :title
      = f.input :short_description
      = f.input :language, collection: Course.languages, include_blank: true
      %p
      = f.button :submit
  .card-footer
    .float-start
      = link_to previous_wizard_path, class: "btn btn-sm btn-info" do
        .fa.fa-arrow-left
        Back
  
    .float-end
      = link_to next_wizard_path, class: "btn btn-sm btn-info" do
        .fa.fa-arrow-right
        Continue
