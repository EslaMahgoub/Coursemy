.card
  .card-header
    .fa.fa-graduation-cap
    = link_to course.title, course_path(course)
  .card-body
    %small= simple_format(course.short_description)
  .card-footer
    .text-center
      = enrollment_button(course)
      .row 
      = review_button(course)
  .card-footer
    .row
      .col-md-6
        .text-warning.fas.fa-star
          = course.average_rating
        (  
        .fas.fa-user-graduate
        = course.enrollments_count
        )
        .fas.fa-book
        = course.lessons_count
      .col-md-6
        .fas.fa-chalkboard-teacher
        = link_to course.user.username, user_path(course.user)
  .card-footer
    .row
      .col-md-6
        .fas.fa-globe-europe
        = course.language
      .col-md-6
        .fas.fa-signal
        = course.level 
  .card-footer
    .row
      .col-md-6
        .far.fa-clock
        = course.created_at.strftime('%d-%b-%Y')
        
  - if current_user && policy(course).edit?
    .card-footer
      %p
      - if policy(course).owner?
        = link_to "Add New Lesson", new_course_lesson_path(course, @lesson), class: "btn btn-sm btn-primary" 
      = link_to 'Show', course, class: 'btn btn-sm btn-primary '
      // if policy(course).edit?
      = link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning' 
      // if policy(course).destroy?
      = link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' 