-# frozen_string_literal: true
= simple_form_for(@enrollment) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    //, as: :radio_buttons
    = f.input :rating, collection: 1..5 
    = f.input :review
  
  %p
  .form-actions
    = f.button :submit
